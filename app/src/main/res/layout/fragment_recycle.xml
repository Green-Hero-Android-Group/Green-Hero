<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        />

    <View
        android:id="@+id/background_shape"
        android:layout_width="413dp"
        android:layout_height="0dp"
        android:background="@drawable/background_view"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints,VisualLintBounds"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/recycle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recycle"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="517dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/recycle_image"
        android:layout_width="223dp"
        android:layout_height="183dp"
        app:srcCompat="@drawable/trash"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="126dp" />

    <TextView
        android:id="@+id/add_item_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/add_item"
        android:textColor="@color/white"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="309dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/recycle_head"
        android:layout_width="197dp"
        android:layout_height="78dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/recycle"
        android:textColor="@color/primaryGreen"
        android:textSize="55sp"
        tools:ignore="MissingConstraints,TextSizeCheck,TextContrastCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/type_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="@string/type_name"
        android:textColor="@color/backgroundWhite"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="387dp"
        android:importantForAutofill="no" />

    <NumberPicker
        android:id="@+id/items_number"
        android:layout_width="63dp"
        android:layout_height="86dp"
        android:layout_gravity="start"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="373dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>